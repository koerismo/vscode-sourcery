{
	"name": "sourcery",
	"publisher": "koerismo",
	"displayName": "Sourcery",
	"description": "Provides Source Engine filesystem support.",
	"version": "0.0.2",
	"icon": "images/icon.png",
	"engines": {
		"vscode": "^1.89.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "sourcery.vpk.open",
				"title": "Add Vpk to Workspace"
			},
			{
				"command": "sourcery.game.reveal",
				"icon": "$(file-symlink-file)",
				"title": "Reveal Original File"
			},
			{
				"command": "sourcery.vmt.preview",
				"icon": "$(symbol-color)",
				"category": "Material",
				"title": "Open Material Preview"
			},
			{
				"command": "sourcery.vmt.browse",
				"category": "Material",
				"title": "Open Material Browser"
			},
			{
				"command": "sourcery.mdl.copy",
				"title": "Copy To Mod",
				"category": "Model",
				"icon": "$(file-copy-file)"
			},
			{
				"command": "sourcery.mdl.compile",
				"title": "Compile",
				"category": "Model",
				"icon": "$(server-process)"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "sourcery.vpk.open",
					"when": "resourceExtname == .vpk"
				},
				{
					"command": "sourcery.mdl.copy",
					"when": "resourceExtname == .mdl"
				},
				{
					"command": "sourcery.mdl.compile",
					"when": "resourceExtname == .qc"
				}
			],
			"editor/title": [
				{
					"command": "sourcery.game.reveal",
					"when": "resourceScheme == mod",
					"group": "navigation"
				},
				{
					"command": "sourcery.vmt.preview",
					"when": "resourceExtname == .vmt",
					"group": "navigation"
				},
				{
					"command": "sourcery.mdl.compile",
					"when": "resourceExtname == .qc",
					"group": "navigation"
				}
			]
		},
		"customEditors": [
			{
				"viewType": "sourcery.vtf",
				"displayName": "Valve Texture",
				"selector": [
					{
						"filenamePattern": "**/*.vtf"
					}
				]
			},
			{
				"viewType": "sourcery.vmt",
				"displayName": "Valve Material",
				"priority": "option",
				"selector": [
					{
						"filenamePattern": "**/*.vmt"
					}
				]
			},
			{
				"viewType": "sourcery.mdl",
				"displayName": "Valve Model",
				"priority": "default",
				"selector": [
					{
						"filenamePattern": "**/*.mdl"
					}
				]
			}
		],
		"taskDefinitions": [
			{
				"type": "studiomdl",
				"required": [],
				"properties": {}
			}
		],
		"configuration": {
			"title": "Sourcery",
			"properties": {
				"autoMountGame": {
					"description": "Automatically mount gameinfo.txt on workspace load?",
					"type": "boolean",
					"default": true
				},
				"binPath": {
					"description": "The path to the game's bin folder, containing studiomdl.",
					"type": "string",
					"examples": [
						"~/steam/steamapps/common/Portal 2/bin/"
					]
				},
				"vmtErrors.modelPath": {
					"description": "Enable warnings for paths that begin with props_xyz instead of models/props_xyz?",
					"type": "boolean",
					"default": true
				},
				"vmtErrors.notFound": {
					"description": "Enable warnings for not-found textures?",
					"type": "boolean",
					"default": false
				},
				"vmtErrors.invalidParameter": {
					"description": "Enable warnings for parameters not supported by the specified shader?",
					"type": "boolean",
					"default": true
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "pnpm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"package-vsce": "pnpm vsce package --no-dependencies",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^8.1.0",
		"@types/mocha": "^10.0.6",
		"@types/node": "~16.18.97",
		"@types/three": "^0.162.0",
		"@types/vscode": "^1.89.0",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"@vscode/test-electron": "^2.3.10",
		"@vscode/windows-registry": "^1.1.0",
		"eslint": "^8.57.0",
		"fast-vdf": "^2.0.1",
		"glob": "^10.4.1",
		"mocha": "^10.4.0",
		"sfs-js": "link:../sfs-js",
		"stupid-buffer": "^1.0.0",
		"ts-loader": "^9.5.1",
		"typescript": "^4.9.5",
		"vtf-js": "link:../vtf.js",
		"webpack": "^5.91.0",
		"webpack-cli": "^5.1.4"
	}
}
